# Nginx конфигурация для reg.ru (если используется Nginx)
# Поместите в /etc/nginx/sites-available/cuba-clasificados.online

server {
    listen 80;
    listen [::]:80;
    server_name cuba-clasificados.online www.cuba-clasificados.online;
    
    # Редирект на HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name cuba-clasificados.online www.cuba-clasificados.online;
    
    # SSL сертификаты (Let's Encrypt)
    ssl_certificate /etc/letsencrypt/live/cuba-clasificados.online/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/cuba-clasificados.online/privkey.pem;
    
    # SSL настройки
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    
    # Корневая директория
    root /var/www/cuba-clasificados.online;
    index index.html;
    
    # Логи
    access_log /var/log/nginx/cuba-clasificados.access.log;
    error_log /var/log/nginx/cuba-clasificados.error.log;
    
    # Статические файлы
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Кэширование статических файлов
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # API прокси (если backend на другом сервере)
    location /api {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
    
    # Защита от прямого доступа к .env и другим служебным файлам
    location ~ /\. {
        deny all;
    }
}
